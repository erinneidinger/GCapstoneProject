@model IEnumerable<groupCapstoneMusic.Models.Message>

@*@{
    Layout = null;
}*@

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <h2>My Inbox</h2>
</head>
<body>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.From)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DatePosted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnRead)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.From)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Subject)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DatePosted)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UnRead)
        </td>
        <td>
            <a class="btn btn-primary" style="color:yellow" @Html.ActionLink("Reply", "Create", new { id = item.SenderId })
            <a class="btn btn-primary" style="color:lightgreen" @Html.ActionLink("Details", "Details", new { id = item.Id })
            <a class="btn btn-primary" style="color:darkred" @Html.ActionLink("Delete", "Delete", new { id = item.Id })

                 @if (User.IsInRole("Musician"))
                 {
                    <a class="btn btn-primary" style="color:yellow" @Html.ActionLink("View Concerts", "MusicianConfirmation", "Concert", new { id = item.SenderId }, null )></a>
                 }

        </td>
    </tr>
    }
    
    </table>
</body>
</html>
