@model groupCapstoneMusic.Models.Concert

    @{
        ViewBag.Title = "Details";
    }
    <h2>Details</h2>


    <h2>Find my Concert Venue:</h2>
    <div id="map"></div>
    <style>
        #map {
            height: 400px;
            width: 100%;
        }
    </style>
    <script>
function initMap() {
        var options = {
            zoom: 8,
            center: {lat:@Model.Lat, lng: @Model.Lng}
        }

    var map = new google.maps.Map(document.getElementById('map'), options);

    var marker = new google.maps.Marker({
        position: { lat: @Model.Lat, lng: @Model.Lng },
        map: map,
        icon:'beachflag.png'
    });

    var infoWindow = new google.maps.InforWindow({
        content: (".details")
    });

    marker.addListener('click', function () {
        infoWindow.open(map, marker);
        });
    }

    </script>
    <script async defer src= + @Model.apiMapCall></script>


