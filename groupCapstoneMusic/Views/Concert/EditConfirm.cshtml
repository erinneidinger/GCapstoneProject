                    <div class="checkbox">
                        @Html.EditorFor(model => model.ConfirmationOfMusician)
                        @Html.ValidationMessageFor(model => model.ConfirmationOfMusician, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>
