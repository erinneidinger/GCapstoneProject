@model IEnumerable<groupCapstoneMusic.Models.Concert>

@{
    ViewBag.Title = "Index";
}
<h2>My Concerts</h2>

<p>
    <a class="btn btn-primary" style="color: lightgreen"@Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Venue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StreetAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Audience)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ConcertDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ConcertTime)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Venue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StreetAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Audience)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConcertDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConcertTime)
            </td>
            @if (item.Musician != null)
            {
                var musician = item.Musician;

                <td>
                    <a class="btn btn-primary btn-sm" style="color:lightgreen" @Html.ActionLink("Musicians Profile", "Details", "Musician", new { id = item.MusicianId }, null)
                    <a class="btn btn-primary btn-sm" style="color:yellow" @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                    <a class="btn btn-primary btn-sm" style="color:yellow" @Html.ActionLink("Details", "Details", new { id = item.Id })
                    <a class="btn btn-primary btn-sm" style="color:darkred" @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            }
            @if (item.Musician == null)
            {
                <td>
                    <a class="btn btn-primary btn-sm" style="color:lightgreen" @Html.ActionLink("Search Musicians", "FilteredSearch", "Musician")
                    <a class="btn btn-primary btn-sm" style="color:yellow"@Html.ActionLink("Edit", "Edit", new { id = item.Id })
                    <a class="btn btn-primary btn-sm" style="color:yellow"@Html.ActionLink("Details", "Details", new { id = item.Id })
                    <a class="btn btn-primary btn-sm" style="color:darkred"@Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            }
        </tr>

    }

</table>
